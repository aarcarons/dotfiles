#!/bin/sh

SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $SCRIPT_PATH/brew
source $SCRIPT_PATH/dev_tools
source $SCRIPT_PATH/dotfiles
source $SCRIPT_PATH/settings

CMDNAME=`basename $0`
USAGE="Usage: $CMDNAME [i | b | d | s]"
help() {
    echo $USAGE
    echo ""
    echo "Options:"
    echo "  i:  Setup all configurations"
    echo "  b:  Install Homebrew packages"
    echo "  d:  Create symlinks for dotfiles"
    echo "  s:  Apply defaults settings"
}

if [ $# -eq 0 ]; then
    echo "$USAGE" 1>&2
    exit 1
fi

while [ $# -gt 0 ]
do
    case $1 in
        i)
            install_brew
            install_fonts

            update_dotfiles
            update_brew
            apply_configurations

            install bundler
            install_ohmyz
            ;;
        b)
            update_brew
            ;;
        d)
            update_dotfiles
            ;;
        s)
            apply_configurations
            ;;
        -h)
            help
            exit 0
            ;;
        *)
            echo "$USAGE" 1>&2
            exit 1
    esac
    shift
done
