#!/bin/sh

SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $SCRIPT_PATH/brew
source $SCRIPT_PATH/dev_tools
source $SCRIPT_PATH/link
source $SCRIPT_PATH/settings

CMDNAME=`basename $0`
USAGE="Usage: $CMDNAME [ import | export ]"
help() {
    echo $USAGE
    echo ""
    echo "Options:"
    echo "  import:   Import settings"
    echo "  export:   Export settings"
}

if [ $# -eq 0 ]; then
    echo "$USAGE" 1>&2
    exit 1
fi

while [ $# -gt 0 ]
do
    case $1 in
        import)
            install_brew
            update_brew
            update_links
            import_settings
            install_fonts
            install_ohmyz
            ;;
        export)
            export_settings
            ;;
        -h)
            help
            exit 0
            ;;
        *)
            echo "$USAGE" 1>&2
            exit 1
    esac
    shift
done
